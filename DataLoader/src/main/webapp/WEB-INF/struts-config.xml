<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

    <form-beans>
        <form-bean name="fileForm" type="form.FileUploadForm"/>
    </form-beans>


    <action-mappings>
        <action path="/index"
                forward="/jsp/index.jsp"/>

        <action path="/save"
                type="action.FileUploadAction"
                parameter="loadMultipartContent"
                scope="request"
                name="fileForm"
                validate="true">
            <forward name="success" path="/suc.jsp"/>
            <forward name="userIsNotExist" path="/error.jsp"/>
         </action>
    </action-mappings>


</struts-config>