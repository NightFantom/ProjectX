<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

    <form-beans>
        <form-bean name="fileForm" type="form.FileUploadForm"/>
        <form-bean name="LoginForm" type="forms.LoginForm"/>
    </form-beans>

    <global-exceptions>
        <exception type="java.lang.Exception"
                   path="/error.do"
                   handler="action.AllExceptionHandler"
                   key="commonError"/>
    </global-exceptions>

    <action-mappings>
        <action path="/index"
                name="LoginForm"
                forward="/jsp/index.jsp"/>
        <action path="/private/loadFilePage" forward="/jsp/loadFile.jsp"/>
        <action path="/error" forward="/jsp/error.jsp"/>
        <action path="/private/welcomePage" forward="/jsp/welcomePage.jsp"/>
        <action path="/login"
                name="LoginForm"
                type="action.LoginAction"
                scope="request">
            <forward name="success" path="/private/welcomePage.do" redirect="true"/>
            <forward name="error" path="/jsp/index.jsp"/>
        </action>
        <action path="/private/exit"
                name="LoginForm"
                type="action.LoginAction"
                parameter="exit">
            <forward name="success" path="/jsp/index.jsp"/>
        </action>
        <action path="/save"
                type="action.FileUploadAction"
                parameter="loadMultipartContent"
                scope="request"
                name="fileForm"
                validate="true">
            <forward name="success" path="/jsp/successful.jsp"/>
            <forward name="userIsNotExist" path="/jsp/error.jsp"/>
         </action>
    </action-mappings>

    <controller>
        <set-property value="action.ExtendedRequestProcessor" property="processorClass"/>
    </controller>

    <message-resources parameter="commonBundle" className="org.apache.struts.config.MessageResourcesConfig" factory="org.apache.struts.util.PropertyMessageResourcesFactory"/>

</struts-config>