<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="forms.Price" table="PRICE">
        <id name="id" column="ID" type="java.lang.Integer">
            <generator class="sequence">
                <param name="sequence">S_ID_PRICE</param>
            </generator>
        </id>
        <property name="idCity" column="ID_CITY" type="java.lang.Integer" not-null="true"/>
        <property name="idMedicament" column="ID_MEDICAMENT" type="java.lang.Integer" not-null="true"/>
        <property name="count" column="COUNT" type="java.lang.Integer" not-null="true"/>
        <property name="cost" column="COSTS" type="java.lang.Double" not-null="true"/>
        <property name="dateUpdate" column="DATE_UPDATE" type="java.util.Date" not-null="true"/>
        <property name="pharmacyName" column="PHARMACY_NAME" type="java.lang.String" not-null="true"/>
        <many-to-one name="pharmacy" column="ID_PHARMACY" class="forms.Pharmacy" lazy="false"/>

        <query name="getPrice">
            select price from forms.Price as price where price.idMedicament = :idMedicament and price.idCity = :idCity
        </query>
    </class>
</hibernate-mapping>