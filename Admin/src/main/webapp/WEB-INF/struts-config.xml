<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

    <form-beans>
        <form-bean name="LoginForm" type="forms.LoginForm"/>
        <form-bean name="DefaultForm" type="forms.ActionFormBase"/>
        <form-bean name="ViewPharmacy" type="forms.ViewPharmacyForm"/>
        <form-bean name="EditPharmacy" type="forms.EditPharmacyForm"/>
        <form-bean name="CreatePharmacy" type="forms.CreatePharmacyForm"/>
        <form-bean name="ViewClient" type="forms.ViewClientForm"/>
        <form-bean name="CreateClient" type="forms.CreateClientForm"/>
        <form-bean name="EditClient" type="forms.EditClientForm"/>
    </form-beans>

    <global-exceptions>
        <exception type="java.lang.Exception"
                   path="/error.do"
                   handler="action.AllExceptionHandler"
                   key="commonError"/>
    </global-exceptions>

    <action-mappings>
        <action path="/index"
                name="LoginForm"
                forward="/jsp/index.jsp"/>

        <action path="/error" forward="/jsp/error.jsp"/>
        <action path="/private/rejectAccess" forward="/jsp/rejectAccess.jsp"/>
        <action path="/private/welcomePage" forward="/jsp/welcomePage.jsp"/>


        <action path="/login"
                name="LoginForm"
                type="actions.LoginAction"
                scope="request">
            <forward name="success" path="/private/welcomePage.do" redirect="true"/>
            <forward name="error" path="/jsp/index.jsp"/>
        </action>

        <action path="/private/viewPharmacies"
                name="DefaultForm"
                type="actions.PharmacyAction"
                scope="request"
                parameter="filter">
            <forward name="success" path="/jsp/allPharmacy.jsp"/>
        </action>

        <action path="/private/viewPharmacy"
                name="ViewPharmacy"
                type="actions.PharmacyAction"
                scope="request">
            <forward name="success" path="/jsp/viewPharmacy.jsp"/>
        </action>

        <action path="/private/editPharmacy"
                name="ViewPharmacy"
                type="actions.PharmacyAction"
                scope="request">
            <forward name="success" path="/jsp/editPharmacy.jsp"/>
        </action>

        <action path="/private/createPharmacy"
                name="ViewPharmacy"
                forward="/jsp/editPharmacy.jsp"/>

        <action path="/private/savePharmacy"
                name="CreatePharmacy"
                type="actions.PharmacyAction"
                scope="request"
                parameter="edit">
            <forward name="success" path="/jsp/successSave.jsp"/>
            <forward name="error" path="/jsp/editPharmacy.jsp"/>
        </action>

        <action path="/private/saveEditPharmacy"
                name="EditPharmacy"
                type="actions.PharmacyAction"
                scope="request"
                parameter="edit">
            <forward name="success" path="/jsp/successSave.jsp"/>
            <forward name="error" path="/jsp/editPharmacy.jsp"/>
        </action>

        <action path="/private/exit"
                name="LoginForm"
                type="actions.LoginAction"
                scope="request"
                parameter="exit">
            <forward name="success" path="/jsp/index.jsp"/>
        </action>

        <action path="/private/listClient"
                name="DefaultForm"
                scope="request"
                type="actions.ClientAction"
                parameter="filter">
            <forward name="success" path="/jsp/listClients.jsp"/>
        </action>

        <action path="/private/createClient"
                name="ViewClient"
                scope="request"
                forward="/jsp/viewClient.jsp"/>

        <action path="/private/viewClient"
                name="ViewClient"
                scope="request"
                type="actions.ClientAction">
            <forward name="success" path="/jsp/viewClient.jsp"/>
        </action>

        <action path="/private/saveEditClient"
                name="EditClient"
                scope="request"
                type="actions.ClientAction"
                parameter="edit">
            <forward name="success" path="/jsp/successSave.jsp"/>
            <forward name="error" path="/jsp/viewClient.jsp"/>
        </action>

        <action path="/private/saveClient"
                name="CreateClient"
                scope="request"
                type="actions.ClientAction"
                parameter="edit">
            <forward name="success" path="/jsp/successSave.jsp"/>
            <forward name="error" path="/jsp/viewClient.jsp"/>
        </action>

        <action path="/private/listStatisticPharmacy"
                name="DefaultForm"
                scope="request"
                type="actions.StatisticPharmacyAction"
                parameter="filter">
            <forward name="success" path="/jsp/listStatisticPharmacy.jsp"/>
        </action>

    </action-mappings>

    <controller>
        <set-property value="action.ExtendedRequestProcessor" property="processorClass"/>
    </controller>

    <message-resources parameter="commonBundle" className="org.apache.struts.config.MessageResourcesConfig"
                       factory="org.apache.struts.util.PropertyMessageResourcesFactory"/>

</struts-config>