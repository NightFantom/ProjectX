<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

    <form-beans>
        <form-bean name="ResultSetForm" type="forms.ActionFormBase"/>
        <form-bean name="StandardSearchForm" type="forms.ActionFormBase"/>
        <form-bean name="ViewPharmacyForm" type="forms.ViewPharmacyForm"/>
        <form-bean name="SearchForm" type="forms.FormForSearch"/>
    </form-beans>

    <global-exceptions>
        <exception type="java.lang.Exception"
                   path="/error.do"
                   handler="action.AllExceptionHandler"
                   key="commonError"/>
    </global-exceptions>

    <action-mappings>
        <action path="/index"
                forward="/jsp/index.jsp"
                name="StandardSearchForm"
                scope="request"/>

        <action path="/ourContacts" forward="/jsp/ourContacts.jsp"/>

        <action path="/error" forward="/jsp/error.jsp"/>

        <action path="/search"
                type="action.SearchAction"
                name="StandardSearchForm"
                scope="request">
            <forward name="start" path="/jsp/price.jsp"/>
            <forward name="listMedicament" path="/jsp/listMedicament.jsp"/>
        </action>

        <action path="/viewPharmacy"
                type="action.ViewPharmacyAction"
                name="ViewPharmacyForm"
                scope="request">
            <forward name="start" path="/jsp/viewPharmacy.jsp"/>
        </action>

        <action path="/listPharmacy"
                type="action.ViewPharmacyAction"
                name="ViewPharmacyForm"
                scope="request"
                parameter="list">
            <forward name="start" path="/jsp/listPharmacy.jsp"/>
        </action>
    </action-mappings>

    <controller>
        <set-property value="action.ExtendedRequestProcessor" property="processorClass"/>
    </controller>
    
    <message-resources parameter="commonBundle" className="org.apache.struts.config.MessageResourcesConfig" factory="org.apache.struts.util.PropertyMessageResourcesFactory"/>

</struts-config>